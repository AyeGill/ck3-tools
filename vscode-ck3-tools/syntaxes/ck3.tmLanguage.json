{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CK3 Script",
  "scopeName": "source.ck3",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#scope-references" },
    { "include": "#variable-references" },
    { "include": "#special-prefixes" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#blocks" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ck3",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ck3",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ck3",
              "match": "\\\\."
            },
            {
              "name": "variable.other.placeholder.ck3",
              "match": "\\[(.*?)\\]"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.conditional.ck3",
          "match": "\\b(if|else|else_if|switch|while|trigger_if|trigger_else|trigger_else_if)\\b"
        },
        {
          "name": "keyword.control.logical.ck3",
          "match": "\\b(NOT|AND|OR|NOR|NAND)\\b"
        },
        {
          "name": "keyword.other.block.ck3",
          "match": "\\b(limit|trigger|effect|immediate|after|option|desc|modifier|random|random_list|hidden_effect|show_as_tooltip|custom_tooltip)\\b"
        },
        {
          "name": "keyword.other.iterator.ck3",
          "match": "\\b(every_|any_|random_|ordered_)\\w+"
        },
        {
          "name": "keyword.other.save.ck3",
          "match": "\\b(save_scope_as|save_temporary_scope_as|save_scope_value_as)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.ck3",
          "match": "(<=|>=|!=|<|>|\\?=)"
        },
        {
          "name": "keyword.operator.assignment.ck3",
          "match": "="
        }
      ]
    },
    "scope-references": {
      "patterns": [
        {
          "name": "variable.language.scope.ck3",
          "match": "\\b(root|prev|this|from|ROOT|PREV|THIS|FROM)\\b"
        },
        {
          "name": "variable.other.scope.ck3",
          "match": "\\bscope:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "variable-references": {
      "patterns": [
        {
          "name": "variable.other.local.ck3",
          "match": "\\blocal_var:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.global.ck3",
          "match": "\\bglobal_var:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.ck3",
          "match": "\\bvar:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "special-prefixes": {
      "patterns": [
        {
          "name": "entity.name.tag.event-target.ck3",
          "match": "\\bevent_target:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.tag.flag.ck3",
          "match": "\\bflag:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.tag.title.ck3",
          "match": "\\btitle:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.tag.character.ck3",
          "match": "\\bcharacter:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.tag.faith.ck3",
          "match": "\\bfaith:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.tag.culture.ck3",
          "match": "\\bculture:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.tag.dynasty.ck3",
          "match": "\\bdynasty:[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ck3",
          "match": "-?\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ck3",
          "match": "-?\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.ck3",
          "match": "\\b(yes|no)\\b"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "punctuation.section.block.begin.ck3",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.ck3",
          "match": "\\}"
        }
      ]
    }
  }
}
